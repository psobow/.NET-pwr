<Window x:Class="CurrencyRates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyRates"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600">

    <Border Padding="10">
        <StackPanel>

            <TextBlock 
                    Text="WEB API INTERFACE" 
                    FontWeight="Bold" 
                    TextWrapping="Wrap"
                    Margin="0 10"
                    />

            <!-- WEB API Buttons Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Upper row -->
                <Button
                    Grid.Column="0"
                    Grid.Row="0"
                    Height="auto"
                    Margin="0 0 0 10" 
                    Name="get_actual_exchange_rates" >
                    <TextBlock 
                        Height="auto"
                        Text="Get actual exchange rates" 
                        TextWrapping="Wrap" 
                        TextAlignment="Center"
                    />
                </Button>

                <!-- Middle row -->
                <Button
                    Grid.Column="0"
                    Grid.Row="1"
                    Height="auto"
                    Margin="0 0 0 0"
                    Name="get_specific_date_exchange_rates" >
                    <TextBlock 
                        Height="auto"
                        Text="Get specific date exchange rates" 
                        TextWrapping="Wrap" 
                        TextAlignment="Center"
                    />
                </Button>

                <TextBlock 
                    Grid.Column="1"
                    Grid.Row="1"
                    Text="Insert date: 
                    RRRR-MM-DD"
                    Height="auto"
                    TextWrapping="Wrap" 
                    TextAlignment="Center"
                    Margin="0 0"
                />

                <TextBox 
                    Grid.Column="2"
                    Grid.Row="1"
                    Padding="2" 
                    Height="auto"
                    Margin="5 5 5 5"

                />

                <!-- Lower row -->
                <Button
                    Grid.Column="0"
                    Grid.Row="2"
                    Height="auto"
                    Margin="0 10 0 0"
                    Name="get_exchange_rates_from_the_time_period" >
                    <TextBlock 
                        Height="auto"
                        Text="Get exchange rates from the time period" 
                        TextWrapping="Wrap" 
                        TextAlignment="Center"
                    />
                </Button>

                <TextBlock 
                    Grid.Column="1"
                    Grid.Row="2"
                    Text="Insert start date: 
                    RRRR-MM-DD"
                    Height="auto"
                    TextWrapping="Wrap" 
                    TextAlignment="Center"
                    Margin="0 10 0 0"
                />

                <TextBox 
                    Grid.Column="2"
                    Grid.Row="2"
                    Padding="2" 
                    Height="auto"
                    Margin="5 15 5 5"
                />

                <TextBlock 
                    Grid.Column="3"
                    Grid.Row="2"
                    Text="Insert end date: 
                    RRRR-MM-DD"
                    Height="auto"
                    TextWrapping="Wrap" 
                    TextAlignment="Center"
                    Margin="0 10 0 0"
                />

                <TextBox 
                    Grid.Column="4"
                    Grid.Row="2"
                    Padding="2" 
                    Height="auto"
                    Margin="5 15 5 5"
                />


            </Grid>

            <!-- Concurency Rates From WEB API-->
            <Grid Margin="0 10 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0" >
                    <TextBlock 
                    Text="Concurency rates in RRRR-MM-DD" 
                    FontWeight="Bold" 
                    TextWrapping="Wrap"
                    />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Euro Rate -->
                        <TextBlock
                            Grid.Column="0"
                            Grid.Row="0"
                            Padding="4"
                            Text="EUR"
                            />
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="0"
                            Padding="4"
                            Text="-.-- PLN"
                            />

                        <!-- GBP Rate -->
                        <TextBlock
                            Grid.Column="0"
                            Grid.Row="1"
                            Padding="4"
                            Text="GBP"
                            />
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="1"
                            Padding="4"
                            Text="-.-- PLN"
                            />

                        <!-- USD Rate -->
                        <TextBlock
                            Grid.Column="0"
                            Grid.Row="2"
                            Padding="4"
                            Text="USD"
                            />
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="2"
                            Padding="4"
                            Text="-.-- PLN"
                            />

                        <!-- Gold Rate -->
                        <TextBlock
                            Grid.Column="0"
                            Grid.Row="3"
                            Padding="4"
                            Text="Gold"
                            />
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="3"
                            Padding="4"
                            Text="-.-- PLN / Gram"
                            />
                    </Grid>
                </StackPanel>


                <StackPanel 
                    Grid.Column="1" 
                    Grid.Row="0"
                    >
                    <TextBlock 
                    Text="Concurency rates from RRRR-MM-DD to RRRR-MM-DD" 
                    FontWeight="Bold" 
                    TextWrapping="Wrap"
                    />
                    <ScrollViewer 
                        HorizontalScrollBarVisibility="Disabled"
                        Height="113"
                        CanContentScroll="True" >
                        <TextBox 
                            TextWrapping="Wrap"
                            Text="Witam Witam"
                            IsReadOnly="True"
                            Background="#eee"
                            Padding="2"
                        />
                    </ScrollViewer>
                </StackPanel>

            </Grid>


            <TextBlock 
                    Text="DATABASE INTERFACE" 
                    FontWeight="Bold" 
                    TextWrapping="Wrap"
                    Margin="0 10"
                    />
            
            

            <!-- TextBox Log with scroll bar -->
            <StackPanel Margin="0 10 0 0">
                <TextBlock Text="App logs" FontWeight="Bold"/>
                <ScrollViewer 
                    HorizontalScrollBarVisibility="Disabled"
                    Height="100"
                    CanContentScroll="True">
                    <TextBox 
                        x:Name="logsTextBox" 
                        TextWrapping="Wrap"
                        Text="Witam Witam"
                        IsReadOnly="True"
                        Background="#eee"
                        Padding="2"
                        />
                </ScrollViewer>
            </StackPanel>



        </StackPanel>
    </Border>
</Window>
