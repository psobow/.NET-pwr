            <!-- Concurency Rates -->
            <TextBlock 
                Text="Concurency Rates" 
                FontWeight="Bold" 
                Margin="0 10 0 10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Euro Rate -->
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="0"
                    Padding="2"
                    Text="EUR"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="0"
                    Padding="2"
                    Text="0.00 PLN"
                    />

                <!-- GBP Rate -->
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="1"
                    Padding="2"
                    Text="GBP"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="1"
                    Padding="2"
                    Text="0.00 PLN"
                    />

                <!-- USD Rate -->
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="2"
                    Padding="2"
                    Text="USD"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="2"
                    Padding="2"
                    Text="0.00 PLN"
                    />

                <!-- Gold Rate -->
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="3"
                    Padding="2"
                    Text="Gold"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="3"
                    Padding="2"
                    Text="0.00 PLN / Gram"
                    />
            </Grid>
            
            <!-- TextBox with scroll bar -->
            <StackPanel Margin="0 10 0 0">
                <TextBlock Text="Logs"/>
                <ScrollViewer 
                    HorizontalScrollBarVisibility="Disabled"
                    Height="100"
                    CanContentScroll="True">
                    <TextBox 
                        x:Name="logsTextBox" 
                        TextWrapping="Wrap"
                        Text="Witam Witam"
                        IsReadOnly="True"
                        Background="#eee"
                        Padding="2"
                        />
                </ScrollViewer>
            </StackPanel>



        </StackPanel>
    </Border>
</Window>
